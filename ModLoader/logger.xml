<log4net>
    <appender name="ModLoaderFile" type="log4net.Appender.FileAppender">
        <file value="ModLoader/ModLoader.log" />
        <appendToFile value="false" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %logger [%-5level] - %message%newline" />
        </layout>
    </appender>

    <logger name="ModLoader">
        <level value="ALL" />
        <appender-ref ref="ModLoaderFile" />
    </logger>
</log4net>